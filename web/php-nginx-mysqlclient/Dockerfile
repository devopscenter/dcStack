ARG COMPOSITE_TAG
FROM devopscenter/php-nginx:${COMPOSITE_TAG}
MAINTAINER bob < bob [at] devops {dot} center>

ADD mysqlclient.sh /installs/mysqlclient.sh
WORKDIR /installs
RUN ./mysqlclient.sh

CMD /bin/bash -c "/usr/bin/supervisord && tail -f /dev/null"
